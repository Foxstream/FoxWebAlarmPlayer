div(class="imageplayer")
    imagewithosd(imgwidth='{{imgwidth}}', imgheight='{{imgheight}}', image='alarm.Images[currentIdx].Image', osd='showOsd ? alarm.Images[currentIdx].OSD : undefined')
    div(id='play_controller', ng-show='alarm!=undefined && !loading')
        .progress
            div(ng-show='!loading', class="progress-bar", aria-valuenow="{{ ((currentIdx + 1) / alarm.Images.length) }} * 100",aria-valuemin="0", aria-valuemax="100" style="width: {{ ((currentIdx + 1) / alarm.Images.length) * 100}}%; height: 10px;") 
        div(class="osd")
            button(id='prev', ng-click="prevImage()", ng-disabled="playing", title='Image précédente')
                span(class='glyphicon glyphicon-step-backward')
            button(id='play', ng-click="playing=!playing" title='{{ playing ? "Stop" : "Play" }}')
                span(class="glyphicon", ng-class='{ "glyphicon-play": !playing, "glyphicon-pause": playing }')
            button(id='next', ng-click="nextImage()", ng-disabled="playing", title='Image suivante')
                span(class='glyphicon glyphicon-step-forward')
            button(id='osd', ng-click="toggleOsd()", title='Toggle osd', data-toggle="button")
                span(class='glyphicon glyphicon-sunglasses')

    div(ng-show='loading', class="progress-bar progress-bar-striped active",aria-valuenow="100",aria-valuemin="0", aria-valuemax="100" style="width: 100%") Loading