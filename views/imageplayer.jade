div(class="imageplayer")
    imagewithosd(image='alarm.Images[currentIdx].Image', osd='showOsd ? alarm.Images[currentIdx].OSD : undefined')
    div(class="osd")
    div(class="alarm-info notif-animation", ng-show="alarm !== undefined")
        h5 {{ alarm.timestamp*1000 | date:'dd/MM/yyyy - HH:mm' }} - {{alarm.cameraname}} - ({{alarm.sitename}})
    div(class='player-controls')
        span(class='glyphicon glyphicon-step-backward', ng-click="prevImage()")
        span(class="glyphicon", ng-class='{ "glyphicon-play": !playing, "glyphicon-pause": playing }', ng-click="playing=!playing")
        span(class='glyphicon glyphicon-step-forward', ng-click="nextImage()")
        span(class='glyphicon glyphicon-sunglasses', ng-click="toggleOsd()")

    spinner(ng-show="loading")