div(class="imageplayer")
    imagewithosd(imgwidth='{{imgwidth}}', imgheight='{{imgheight}}', image='alarm.Images[currentIdx].Image', osd='showOsd ? alarm.Images[currentIdx].OSD : undefined')
    div(id='play_controller', ng-show='alarm!=undefined && !loading')
        div(class="btn-group")
            button(id='prev', ng-click="prevImage()", ng-disabled="playing", class="btn btn-sm btn-default", title='Image précédente')
                span(class='glyphicon glyphicon-step-backward')
            button(id='play', ng-click="playing=true", ng-disabled="playing", class="btn btn-sm btn-default", title='Play') 
                span(class='glyphicon glyphicon-play')
            button(id='stop', ng-click="playing=false", ng-disabled="!playing", class="btn btn-sm btn-default", title='Stop') 
                span(class='glyphicon glyphicon-stop')
            button(id='next', ng-click="nextImage()", ng-disabled="playing", class="btn btn-sm btn-default", title='Image suivante') 
                span(class='glyphicon glyphicon-step-forward')

        span  Image {{currentIdx + 1}}/{{ alarm.Images.length }} 
        button(id='osd', ng-click="toggleOsd()", class="btn btn-sm btn-default", title='Toggle osd', data-toggle="button")
            span(class='glyphicon glyphicon-sunglasses')

    div(ng-show='loading', class="progress-bar progress-bar-striped active",aria-valuenow="100",aria-valuemin="0", aria-valuemax="100" style="width: 100%") Loading