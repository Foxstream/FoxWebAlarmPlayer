extends ./MainTemplate.jade

block title
  title Vid√©o en direct

block content
  div(class='container-fluid')

    div(ng-controller='livecontroller')  
        
        div(class='col-lg-6')
            div(ng-repeat='(site, cams) in cameras track by $index')
                h5 
                    a(href='#collapse{{$index}}' data-toggle='collapse'){{ site }}
                div(id='collapse{{ $index }}'
                    class='collapse')
                    div(ng-repeat='c in cams track by $index | orderBy: "-camid"'
                        class='col-lg-6 col-sm-6 cam'
                        ng-click='showLiveFeed(c.serverId, c.camid, c.acq_fps)')
                        img(src='{{ c.image }}'
                            class='camera-image')
                        h5(class='camera-name') Cam_{{ $index + 1 }}

        div(class='col-lg-6 live-canvas')
            img(src='{{ liveImage }}')


    script(src='static/AlarmData.js')  
    script(src='static/EventSource4IE.js')  
    script(src='static/EventSource.js')  
    script(src='static/async.min.js')  
    script(src='static/livecontroller.js')  
    script(src='static/serverviewer.js')  
