doctype html
html
  head
    meta(name="viewport",content="width=device-width, initial-scale=1")
    meta(name="mobile-web-app-capable", content="yes")
    script(src='static/jquery-2.1.3.min.js')     
    script(src='static/bootstrap.min.js')     
    link(rel="stylesheet", href="static/css/bootstrap.min.css", media="screen")
    link(rel="stylesheet", href="static/css/main.css", media="screen")
    title Login

  body    

    div(class='container-fluid')
        header(class='hidden-sm hidden-xs')
          img(src='/static/img/logo-foxstream.gif')
          h1(class='app-name') FoxWebAlarmPlayer

    nav(role='navigation' class='nav-connection')
        span(class='nav-link') 
            span(class='link') Connexion

    div(class='container-fluid content')
        div(class='foxstream-header')
            img(src='static/img/logo-foxstream.gif')
            br
            span(class='app-name') FoxWebAlarmPlayer


        form(class='form' action='/login', method='POST')
            div(class='col-md-6 col-xs-12')
                label(for='username') Login :
            div(class='col-md-6 col-xs-12')
                input(type='text', name='username', placeholder='Username',required, autofocus)
            div(class='col-md-6 col-sm-6 col-xs-12')
                label(for='password') Mot de passe :
            div(class='col-md-6 col-xs-12')
                input(type='password', name='password', placeholder='Password', required)
            div(class='col-md-6 col-md-offset-6 col-xs-12 col-xs-offset-0 ')
                button(type='submit' class='button-red full-width') Connexion          