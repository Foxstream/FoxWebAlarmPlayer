doctype html
html
  head
    meta(name="viewport",content="width=device-width, initial-scale=1")
    meta(name="mobile-web-app-capable", content="yes")
    script(src='static/jquery-2.1.3.min.js')     
    script(src='static/bootstrap.min.js')     
    link(rel="stylesheet", href="static/css/bootstrap.min.css", media="screen")
    link(rel="stylesheet", href="static/css/main.css", media="screen")
    title Login

  body    

    div(class='container-fluid')
    header(class='hidden-xs')
      img(src='/static/img/logo-foxstream.gif')
      h1 FoxWebAlarmPlayer

    nav(role='navigation' class='nav-connection')
        span(class='nav-link') 
            span(class='link') Connexion


    form(class="form-input", action='/login', method='POST')
        h3(class="form-signin-heading") Please sign in
        input(type='text', name='username',class="form-control", placeholder='Username',required, autofocus)
        input(type='password', name='password', class="form-control", placeholder='Password', required)
        button(class="btn btn-lg btn-primary btn-block", type='submit') Sign in        